@page "/"
@inject NavigationManager _nM

<h1 class="text-center">Welcome to Hamster Wars!</h1>
<br />
<h3 class="text-center">Choose the cutest hamster</h3> 
<br />

<div class="text-center">
    <button type="button" class="btn btn-outline-secondary" @onclick="(() => GoToGallery())">Go to Gallery</button>
    <button type="button" class="btn btn-outline-success" @onclick="(() => GoToBattle())">Go to Battle</button>
</div>


@code {
    void GoToGallery() => _nM.NavigateTo("/gallery");
    void GoToBattle() => _nM.NavigateTo("/battle");
}






























